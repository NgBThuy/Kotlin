<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TitleActivity">
    <EditText
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:hint="text"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_alignStart="@+id/imageView10"/>

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/Black"
            android:id="@+id/imageView9"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="10dp"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView10"
            android:background="@color/colorAccent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/imageView9"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView11"
            android:background="@color/Blue"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/imageView9"
            android:layout_toEndOf="@+id/imageView10"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView12"
            android:background="@color/Red"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/imageView9"
            android:layout_toEndOf="@+id/imageView11"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView13"
            android:background="@color/Yellow"
            android:layout_below="@+id/imageView10"
            android:layout_alignEnd="@+id/imageView10"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView14"
            android:background="@color/Lime"
            android:layout_below="@+id/imageView11"
            android:layout_alignEnd="@+id/imageView11"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView15"
            android:background="@color/Black"
            android:layout_below="@+id/imageView12"
            android:layout_alignEnd="@+id/imageView12"/>
    <Button
            android:text="save"
            android:layout_width="367dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnsavetitle"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="90dp"/>

</RelativeLayout>