<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_3"
        tools:context=".upbook.InfoActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="29dp"
            android:layout_marginRight="29dp"
            android:orientation="vertical">

        <ImageView
                android:layout_width="178dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:background="@drawable/home"/>

        <EditText
                android:id="@+id/ed_name_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#00000000"
                android:hint="Name Book"
                android:inputType="textEmailAddress"
                android:textColor="@color/light_blue_600"
                android:textColorHint="#D3D3D3" />

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="9dp"
                android:background="#b9b9b9" />

        <EditText
                android:id="@+id/ed_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#00000000"
                android:hint="Author"
                android:inputType="text"
                android:textColor="@color/light_blue_600"
                android:textColorHint="#D3D3D3" />

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="9dp"
                android:background="#b9b9b9" />

        <EditText
                android:id="@+id/ed_info"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:background="#00000000"
                android:hint="Information"
                android:inputType="text"
                android:textColor="@color/light_blue_600"
                android:textColorHint="#D3D3D3"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="9dp"
                android:background="#b9b9b9" />

        <EditText
                android:id="@+id/ed_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#00000000"
                android:hint="City"
                android:inputType="text"
                android:textColor="@color/light_blue_600"
                android:textColorHint="#D3D3D3" />

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="9dp"
                android:background="#b9b9b9" />
        <EditText
                android:id="@+id/ed_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#00000000"
                android:hint="Contact"
                android:inputType="text"
                android:textColor="@color/light_blue_600"
                android:textColorHint="#D3D3D3" />
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="9dp"
                android:background="#b9b9b9" />

        <Button
                android:id="@+id/btn_upbook"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="60dp"
                android:background="@drawable/btn"
                android:gravity="center"
                android:padding="20dp"
                android:text="Add Book"
                android:textColor="@color/overlay_dark_70"
                android:textSize="15.4sp"/>

    </LinearLayout>

</RelativeLayout>
