<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@mipmap/logo_small"
            android:id="@+id/image"/>

    <TextView
            android:text="WELCOME TO ANDROID"
            android:id="@+id/android"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            android:textColor="#8BC34A"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/image"
            android:layout_width="300dp"
            android:layout_height="35dp"/>
    <TextView
            android:hint="Sign in to continue"
            android:id="@+id/android1"
            android:gravity="center"
            android:textSize="12dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/android"
            android:layout_width="200dp"
            android:layout_height="20dp"/>
    <TextView
            android:layout_width="330dp"
            android:layout_marginTop="20dp"
            android:layout_height="25dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/android1"
            android:text="USERNAME"
            android:id="@+id/username"/>
    <EditText
            android:id="@+id/username1"
            android:hint="Enter your Username"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/username"

            android:layout_width="330dp"
            android:layout_height="45dp"/>
    <TextView
            android:id="@+id/password"
            android:text="PASSWORD"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/username1"
            android:layout_width="330dp"
            android:layout_height="25dp"/>
    <EditText
            android:id="@+id/password1"
            android:hint="Enter your password"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/password"
            android:layout_width="330dp"
            android:layout_height="45dp"/>
    <Button
            android:id="@+id/button"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/password1"
            android:text="SIGN IN"
            android:background="@drawable/editbutton"
            android:textColor="#FAFAFA"
            android:layout_width="320dp"
            android:layout_height="35dp"/>
    <TextView
            android:id="@+id/text"
            android:text="SIGN UP IN AN ACCOUNT?"
            android:fontFamily="serif"
            android:textSize="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/button"
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="25dp"/>
</RelativeLayout>